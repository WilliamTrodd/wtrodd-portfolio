---
import Layout from '../../layouts/Layout.astro'
import NavBar from '../../components/NavBar.astro'
import Footer from '../../components/Footer.astro'
---

<Layout title='Canvas Test'>
  <div class='flex flex-col min-h-screen'>
    <main class='bg-secondary-blue grow min-h-full text-white flex flex-col'>
      <header class='bg-primary-blue h-56 pt-4'>
        <div class='lg:px-32 px-4 h-full'>
          <NavBar />
          <div
            class='flex flex-col h-[75%] transition-all ease-in justify-center'
          >
            <h1 class='md:text-6xl text-2xl font-bold'>Canvas</h1>
          </div>
        </div>
      </header>
      <div
        class='w-screen h-full grow bg-[#11111] flex justify-center items-center relative'
        id='canvas-container'
      >
        <canvas id='canvas' class='absolute z-0'></canvas>
        <div class='z-50 flex flex-col text-7xl'>
          <span>Hello, I'm <span class='text-accent-pink'>Will</span>.</span>
          <span>I'm a full stack web developer.</span>
        </div>
      </div>
    </main>
    <Footer />
  </div>
  <script>
    import '../../scripts/starmap.ts'
  </script>
</Layout>
