---
export interface Props {
  title: string;
  text: string;
  icon: string;
  page: string;
}

const { title, text, icon, page } = Astro.props;
---

<a href={page} class='row-span-4 w-3/5'>
  <div class='row-span-4'>
    <img class='rounded-lg' src={icon} />
    <h3 class='text-2xl text-accent-pink font-bold'>{title}</h3>
    <p class='text-darker-lilac'>{text}</p>
  </div>
</a>
